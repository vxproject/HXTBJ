/* 图片上传 */

.show_img {
width: 680rpx;
margin: 0 auto;
padding-bottom: 25rpx;
}

.show_img view {
float: left;
margin-top: 25rpx;
}
.show_img view:nth-child(3n-1){
margin: 25rpx 25rpx 0 25rpx;
}

.clearfix::before, .clearfix::after {
content: "";
display: block;
height: 0;
line-height: 0px;
clear: both;
visibility: hidden;
}

/*图片上传之 btn */

.show_img_add {
    color: #ccc;
    width: 210rpx;
    height: 210rpx;
    border: 2px dashed #ccc;
    position: relative;
    box-sizing: border-box;
}

.show_img_add::before {
    border-top: 10rpx solid #ccc;
    background: #ccc;
    width: 70rpx;
    margin: -5rpx 0 0 -35rpx;
}

.show_img_add::after {
    border-left: 10rpx solid #ccc;
    background: #ccc;
    height: 70rpx;
    margin: -35rpx 0 0 -5rpx;
}

.show_img_add::before, .show_img_add::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
}

/*  */

.show_img_item, .show_img_item_photo {
    display: inline-block;
    width: 210rpx;
    height: 210rpx;
