    display: flex;
    display: -webkit-flex;
    align-items: center;
}

.footer_select_btn {
    width: 50rpx;
    height: 50rpx;
}

.footer_btn {
    width: 216rpx;
    height: 70rpx;
    border-radius: 10rpx;
    border: solid 3rpx currentColor;
    text-align: center;
    line-height: 70rpx;
    position: absolute;
    top: 50%;
    right: 35rpx;
    transform: translateY(-50%);
}
