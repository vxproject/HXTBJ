page {
  background-color: #f5f5f5;
}

.contai {
  padding: 20rpx 20rpx 130rpx;
}

.pingfen_box {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
}

.pingfen_box_img {
  width: 150rpx;
  height: 150rpx;
  display: flex;
  flex-shrink: 0;
}

.fs-30 {
  font-size: 30rpx;
}

.fs-26 {
  font-size: 26rpx;
}

.fs-22 {
  font-size: 22rpx;
}

.fs-20 {
  font-size: 20rpx;
}

.fc-white {
  color: #fff;
}

.fc-99 {
  color: #999;
}

.fc-66 {
  color: #666;
}

.fc-33 {
  color: #333;
}

.pingfen_box_info {
  width: 100%;
}

.img_star {
  width: 35rpx;
  height: 35rpx;
  margin-top: 22rpx;
  margin-right: 22rpx;
}

.xing_star {
  background-color: #f50;
}

.xing_hui {
  background-color: #f5f5f5;
}

/* 评论框 */

.ipt_txt_box {
  padding: 26rpx 20rpx;
  background: #fff;
  margin-top: 10rpx;
  border-radius: 10rpx;
}

/* 图片上传 */

.show_img {
  display: flex;
  flex-flow: row wrap;
  align-items: center;
}

.show_img view {
  float: left;
  margin-top: 10rpx;
}

.show_img_add {
  width: 120rpx;
  height: 120rpx;
  display: flex;
  flex-shrink: 0;
  border: 1rpx solid #999;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
}

.show_img_ls {
  width: 62rpx;
  height: 52rpx;
}

/*  */

.show_img_item_photo {
  width: 120rpx;
  height: 120rpx;
  display: flex;
  flex-shrink: 0;
}

/* 删除图标 */

.show_img_item {
  position: relative;
  margin-right: 20rpx;
}

.jingting_logo_img {
  position: absolute;
  top: -18rpx;
  right: -18rpx;
  width: 30rpx;
  height: 30rpx;
  padding-left: 25rpx;
  padding-bottom: 25rpx;
}

/* 底部栏 */

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 35rpx;
  border-top: solid 3rpx #f5f5f5;
  background-color: #fff;
  display: flex;
  justify-content: center;
}

.footer_select {
  margin-top: 30rpx;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: space-between;
}

.footer_select_box {
  display: flex;
  display: -webkit-flex;
  align-items: center;
}

.footer_select_btn {
  width: 33rpx;
  height: 33rpx;
}

.footer_btn {
  width: 400rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(to bottom, #ff8a4c, #fd4625);
  height: 70rpx;
  border-radius: 35rpx;
}
