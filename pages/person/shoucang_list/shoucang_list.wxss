/* pages/person/shoucang_list/shoucang_list.wxss */
@import "/template/no_data/no_data.wxss";

page {
  background-color: #f5f5f5;
}

.title_top {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 500;
  width: 100%;
  display: flex;
}

.title {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  margin-bottom: 10rpx;
  width: 100%;
}

.title_cont {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  padding-right: 60rpx;
  background: #fff;
}

.triangle-down {
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-top: 10rpx solid;
  margin-left: 10rpx;
}

.content {
  padding: 30rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  background-color: #fff;
  margin-bottom: 10rpx;
  align-items: center;
  position: relative;
  top: 0;
  left: 0;
}

.scroll_left{
  left: -20%;
}
.cebian{
  width: 20%;
  height: 100%;
  position: absolute;
  right: -20%;
  top: 0;
  background-color: red;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}


.translate {
  transition: all 0.5s linear;
}

.content_left {
  display: flex;
  align-items: center;
  flex-flow: row nowrap;
}

.content_icon {
  display: flex;
  padding: 30rpx 20rpx 30rpx 0;
  align-items: center;
  justify-content: center;
}

.content_img {
  display: flex;
  flex-shrink: 0;
  width: 170rpx;
  height: 170rpx;
  margin-right: 30rpx;
  position: relative;
}
.content_imgsell{
   width: 170rpx;
  height: 170rpx;
  flex-shrink: 0;
  display: flex;
  position: absolute;
  top: 0;
  left: 0;
}

.content_title {
  display: flex;
  width: 100%;
  flex-flow: column nowrap;
  justify-content: space-between;
  height: 180rpx;
}

.content_top {
  width: 100%;
}

.content_bottom {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}

.content_bottom_title {
  display: flex;
  flex-flow: row nowrap;
  align-items: baseline;
  width: 100%;
}

button {
  background-color: rgb(247, 247, 247);
  border-radius: 0rpx;
  padding: 0rpx;
  margin: 0rpx;
  display: inline-block;
  line-height: 1;
}

button::after {
  border: none;
}

.content_btn {
  border: 1rpx solid #ff5000;
  border-radius: 8rpx;
  width: 120rpx;
  text-align: center;
  line-height: 50rpx;
  background-color: #fff;
}

.through {
  text-decoration: line-through;
}

.bg_tag {
  background-color: #fadddf;
  font-size: 22rpx;
  padding: 0 8rpx;
  border-radius: 4rpx;
  margin-top: 6rpx;
}

.tag {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  width:100%; 
  padding: 20rpx 0;
}

.btn {
  padding: 20rpx 30rpx;
}

.btn_guanli {
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: blue;
  border-radius: 12rpx;
  color: white;
}

.pos_bottom {
  position: fixed;
  left: 0;
  display: flex;
  width: 100%;
  background-color: #fff;
  z-index: 500;
}

.bot_cont {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  width: 100%;
}

.bot_left {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}

.deleall {
  background-color: #ff5767;
  border-radius: 8rpx;
  color: white;
  padding: 17rpx 30rpx;
}

.gunali {
  position: fixed;
  top: 200rpx;
  right: 0;
  display: flex;
  padding: 10rpx 30rpx;
  background-color: #ff5767;
  color: white;
  border-bottom-left-radius: 40rpx;
  border-top-left-radius: 40rpx;
  align-items: center;
  line-height: 55rpx;
}
.none{
  pointer-events: none;
}