/* pages/person/order/order.wxss */

page {
  background-color: #f5f5f5;
}

.tab_group {
  padding: 24rpx 42rpx 0 42rpx;
  display: flex;
  display: -webkit-flex;
  justify-content: space-around;
  opacity: 1;
  background: #f5f5f5;
}

.top_head {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  font-size: 30rpx;
  color: #333;
}

.color_gr {
  color: #666;
  font-size: 26rpx;
}

.tab_item {
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  justify-content: center;
}

/* 选中样式 */

.check_style {
  height: 6rpx;
  background: #ff6413;
  border-radius: 4rpx;
  overflow: hidden;
}

.check_styleno {
  border-top: solid 6rpx #f5f5f5;
}

.red_line {
  width: 60rpx;
  margin-top: 22rpx;
}

/* 无订单 */

