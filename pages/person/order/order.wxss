}

.no_order_txt {
  text-align: center;
  padding-top: 18rpx;
}

.mar_center {
  width: 690rpx;
  margin: 0 auto;
}

.flo_left {
  float: left;
}

.flo_right {
  float: right;
}

.yes_order {
  margin-top: 90rpx;
}

.order_item {
  padding: 20rpx;
}

.bc-white {
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  padding: 30rpx 20rpx 20rpx 20rpx;
}

.order_item_header {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
