/* ---商品详情 */

.goods_container {
  padding: 36rpx 0 20rpx 0;
}

.goods_content {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
}

.goods_content_img {
  width: 162rpx;
  height: 162rpx;
  border-radius: 10rpx;
  display: flex;
  flex-shrink: 0;
}

.goods_content_info {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
}
.shouc_ls{
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
}
.goods_content_right {
  display: flex;
  flex-flow: column nowrap;
  flex-shrink: 0;
  margin-left: 40rpx;
}

.line-2 {
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.spec_key_name {
  background: #f5f5f5;
  height: 30rpx;
  border-radius: 4rpx;
  padding: 0 15rpx;
  margin-top: 16rpx;
}

.jianshu {
  display: flex;
  justify-content: flex-end;
  margin-top: 10rpx;
}

.goods_content_info_title {
  width: 510rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.goods_content_info_spec {
  padding: 20rpx 0 10rpx 0;
}

