/* pages/person/order/order.wxss */
page{
    background-color: #f5f5f5;
}
.tab_group{
    background-color: #ffffff;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    display: flex;
    display: -webkit-flex;
    justify-content: space-around;
    position:fixed;
    top:0rpx;
    border-top: solid 2rpx rgba(0, 0, 0, 0.1);
    z-index: 999;
     
}
/* 选中样式 */
.check_style{
    border-top:solid 5rpx #ff5000;

}
.red_line{
    width:90rpx;
    margin: 0 auto;
    margin-top: -10rpx;
}
/* 无订单 */
.no_order{
  padding-top:386rpx;
}
.no_order_img{
    display: block;
    margin:  0 auto;
    width: 160rpx;
    height: 125rpx;
}
.no_order_txt{
    text-align: center;
    padding-top: 18rpx;
}


.mar_center {
width: 690rpx;
margin: 0 auto;
}

.flo_left {
float: left;
}

.flo_right {
float: right;
}

.yes_order {
margin-top: 110rpx;
}

.order_item {
background-color: #fff;
margin-bottom: 30rpx;
}

.order_item_header {
position: relative;
padding: 15rpx 0;
border-bottom: solid 3rpx #f5f5f5;
border-top: solid 3rpx #f5f5f5;
}

.order_item_header_n {
padding-left: 30rpx;
}

.order_status {
position: absolute;
right: 30rpx;
top: 50%;
transform: translateY(-50%);
}

/* ---商品详情 */

.goods_container {
padding: 20rpx 0;
height: 160rpx;
}

.goods_content {
position: relative;
height: 160rpx;
}

.goods_content_img {
width: 160rpx;
height: 160rpx;
background-color: #f8f8f8;
border-radius: 20rpx;
}

.goods_content_info {
position: absolute;
top: 0rpx;
right: 0rpx;
}

.goods_content_info_title {
width: 510rpx;
overflow: hidden;
text-overflow: ellipsis;
white-space: nowrap;
}

.goods_content_info_spec {
padding: 20rpx 0 10rpx 0;
}

