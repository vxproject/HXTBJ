.goods_content {
position: relative;
height: 260rpx;
padding: 10rpx;
margin-top: 20rpx;
border-bottom: 1rpx solid #f5f5f5;
}

.goods_content_img {
width: 160rpx;
height: 160rpx;
/* background-color: #f8f8f8; */
background-color: red;
border-radius: 20rpx;
margin-left:20rpx;
}

.goods_content_info {
position: absolute;
top: 0rpx;
right: 0rpx;
}

.goods_content_info_title {
    width: 510rpx;
display: -webkit-box;

overflow: hidden;

text-overflow: ellipsis;

word-wrap: break-word;

white-space: normal !important;

-webkit-line-clamp: 2;

-webkit-box-orient: vertical;

}

.goods_content_info_spec {
padding: 20rpx 0 10rpx 0;
}

