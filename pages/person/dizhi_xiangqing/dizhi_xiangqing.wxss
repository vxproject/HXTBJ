page{
    background-color: #f5f5f5;
}
.mar_center{
    width: 690rpx;
    margin: 0 auto;
}
.form_box{
    margin-top: 20rpx;
    background-color: #ffffff;
}
.form_ipt_item{
    line-height: 100rpx;
    height: 100rpx;
    margin-left: 30rpx;
    background-color: #ffffff;
    position: relative;
    border-bottom: solid 5rpx #f5f5f5;
}
.form_ipt_item input{
    position: absolute;
    top: 52%;
    left: 130rpx;
    transform: translateY(-50%);
}

.form_ipt_item label{
    position: absolute;
    top: 52%;
    left: 130rpx;
    transform: translateY(-50%);
}
.form_ipt_item picker{
    position: absolute;
    top: 50%;
    right: 30rpx;
    transform: translateY(-50%);
}
.form_ipt_item_x{
    vertical-align: middle;
}
.form_ipt_item_back{
    display:inline-block;
    vertical-align: middle;
    width: 35rpx;
    height: 35rpx;
}
textarea{
    height: 140rpx;
    padding-top: 10rpx;
}
/* 默认地址 */
.set_moren{
    position: relative;
    height: 100rpx;
    background-color: #ffffff;
    margin-top: 20rpx;
    padding-left: 30rpx;
}
.set_moren text{
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
}
switch{
    display: block;
    position: absolute;
    top: 50%;
    right: 30rpx;
    transform: translateY(-50%);
    
}
/* 底部按钮 */
.btn_container{
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 130rpx;
    background-color: #ffffff;
}
.btn_container button{
    position: absolute;
    top: 20rpx;
    left: 30rpx;
    width: 690rpx;
    height: 90rpx;
    line-height: 90rpx;
    margin: 0 auto;
    background-color: #ff5000;
    color: #ffffff;
}