page {
    background-color: #f5f5f5;
}

/* 创业人信息 */

.chuangye_user_info {
    background-color: #fff;
    margin-bottom: 20rpx;
}

.border_top {
    border-top: solid 3rpx #f5f5f5;
}

.form_item {
    width: 680rpx;
    margin: 0 auto;
    display: flex;
    display: -webkit-flex;
    height: 90rpx;
    align-items: center;
}

.form_group input {
    width: 679rpx;
}

.form_btn_box {
    justify-content: space-between;
}

.huoqu_btn {
    width: 35%;
    text-align: center;
    border: solid 3rpx currentColor;
    height: 70rpx;
    line-height: 70rpx;
    border-radius: 10rpx;
}

.title_ {
    padding: 30rpx;
    background-color: #fffdf0;
}

.form_item_user_img {
    margin: 0 20rpx;
    width: 60rpx;
    height: 60rpx;
    background-color: #f5f5f5;
    border-radius: 50%;
}

/* 收货人地址 */

/* 无地址时 */

.no_address_box {
    width: 750rpx;
    background-color: #fff;
}

.no_address_center {
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: space-between;
    width: 680rpx;
    height: 145rpx;
    margin: 0 auto;
}

.no_address_box_logo1 {
    width: 45rpx;
    height: 45rpx;
}

.no_address_box_logo2 {
    width: 40rpx;
    height: 40rpx;
}

/* 有地址时 */

.yes_address_box {
    width: 750rpx;
    background-color: #fff;
}

.yes_address_center {
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: space-between;
    width: 680rpx;
    height: 215rpx;
    margin: 0 auto;
}

.yes_address_group {
    width: 625rpx;
}

.address_group_item1 {
    display: flex;
    align-items: center;
    margin-bottom: 15rpx;
}

/* 商品详情 */

.goods_info_box {
    width: 750rpx;
    background-color: #fff;
    padding: 20rpx 0;
}
.goods_info_box_t{
    height: 80rpx;
    line-height: 80rpx;
    padding-left: 35rpx;
    background-color: #fff;
    border-top: solid 3rpx #f5f5f5;
}
.goods_info_center{
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: space-between;
    width: 680rpx;
    height: 190rpx;
    margin: 0 auto;
}
.goods_info_group{
    height: 190rpx;
    display: flex;
    align-content: space-around;
    width: 500rpx;
    flex-flow:row wrap;
}
.goods_info_group>view{
    width: 500rpx;
}
.goods_info_img{
    width: 150rpx;
    height: 150rpx;
    background-color: #f5f5f5;
}
/* 支付方式 */

.pay_style {
    margin-top: 20rpx;
    display: flex;
    display: -webkit-flex;
    background-color: #fff;
    padding: 0 35rpx;
    align-items: center;
    justify-content: space-between;
    height: 90rpx;
}

.pay_style_right {
    display: flex;
    display: -webkit-flex;
    align-items: center;
}

.pay_style_logo {
    display: inline-block;
    padding-left: 20rpx;
    width: 58rpx;
    height: 50rpx;
}

/* 协议 */

.agreement_box {
    width: 680rpx;
    margin: 80rpx auto 185rpx auto;
}

/* 底部栏 */

.bottom_box {
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 105rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #fff;
}

.bottom_box_btn {
    text-align: center;
    height: 105rpx;
    background-color: #f50707;
    color: #fff;
    width: 216rpx;
}

.bottom_box_btn view:first-child {
    padding-top: 20rpx;
}
