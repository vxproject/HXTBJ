.bg_img_box {
    position: relative;
    margin-bottom: 145rpx;
}

.bg_img {
    width: 100%;
}

/* 二维码 */

.er_code_group {
    position: absolute;
    left: 275rpx;
    top: 850rpx;
    width: 200rpx;
    text-align: center;
    display: flex;
    flex-direction: column;
    color: #fff;
}

.er_code_img {
    width: 120rpx;
    height: 120rpx;
    margin: 0 auto;
    background-color: #fff;
    border-radius:50%;
}

/* 头部栏 */

.header {
    position: fixed;
    top: 40rpx;
    left: 30rpx;
    display: flex;
    align-items: center;
}

.header_user_name {
    width: 80rpx;
    height: 80rpx;
    background-color: #f5f5f5;
    border-radius: 50%;
}

.header_group {
    display: flex;
    align-items: center;
    color: #fff;
    background-color: #aaa;
    border-radius: 40rpx;
    margin-left: 20rpx;
}

.header_home_logo {
    width: 50rpx;
    height: 50rpx;
    background-color: transparent;
}

/* 底部按钮组 */

.footer {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 145rpx;
    background-color: #fff;
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.footer_item {
    width: 30%;
}

.footer_item_img {
    display: block;
    margin: 0 auto;
    width: 50rpx;
    height: 50rpx;
}

.footer_item_title {
    text-align: center;
    padding-top: 10rpx;
}
