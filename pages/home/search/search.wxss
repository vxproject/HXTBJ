    align-items: center;
    margin-left: 50rpx;
}
.header{
  width: 100%;
  display: flex;
  align-items: center;
  padding-bottom: 10rpx;
  border-bottom: solid 1rpx #808081;
}

/* 条件 */
.kuai{
  width: 100%;
