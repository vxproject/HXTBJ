}
.bc-white {
  background-color: #fff;
  position: fixed;
  width: 100%;
  color: #a3a3a3;
  font-size: 30rpx;
}

.column_nowrap {
  display: flex;
  flex-flow: column nowrap;
}


.middle {
  display: flex;
  justify-content: center;
}

.center {
  display: flex;
  align-items: center;
}

.between {
  display: flex;
  justify-content: space-between;
}

.around {
  display: flex;
  justify-content: space-around;
}
